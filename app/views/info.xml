<Alloy>
	<Tab id="infoTab" title=" Info ">
		<Window id="infoWindow" class="topBar" title="Bere Island Easter Retreat Live Blog" onOpen="doOpen">
			<TitleControl platform="ios">
				<Label class="titolo">Bere Island Easter Retreat 2015</Label>
			</TitleControl>
			<LeftNavButton platform="ios">
				<ImageView class="leftNavImg"/>
			</LeftNavButton>
			<ScrollView>
				<View id="container">
					<View id="borderSpacer">
						<ImageView id="headerImage"/>
						<Label id="titolo" class="expoSansProBold"/>
						<Label id="body"/>
						<Label id="linkToSite" class="expoSansProBold" onClick="goToSite"/>
					</View>
				</View>
			</ScrollView>

		</Window>
	</Tab>
</Alloy>